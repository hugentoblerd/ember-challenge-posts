<div class="jumbo">
	<h2>Create a New Post</h2>
</div>

<form class="listing">
	<div>
		<p>{{input type="text" value=newTitle placeholder="Post Title" autofocus=true required=true}}</p>
		<p>{{textarea value=newContent placeholder="Post Content" required=true cols="80" rows="6"}}</p>
		<p>
			<label for="file">Choose file to upload(less than 50kb)</label>
			{{input name="file" type="file" value=newAttachment}}
		</p>
	</div>
	<div>
		<button type="button" class="button" {{action 'createNewPost'}}>Create</button>
		{{#link-to "posts" class="button red"}}Cancel{{/link-to}}
	</div>
</form>

{{outlet}}